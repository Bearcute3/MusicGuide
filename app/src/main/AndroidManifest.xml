<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.musicguide_1">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_round"
        android:roundIcon="@mipmap/icon_1"
        android:supportsRtl="true">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Genres"
            android:label="Жанры"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Genres" />

        <activity
            android:name=".rock"
            android:label="Рок"
            android:parentActivityName=".Genres"
            android:screenOrientation="portrait"
            android:theme="@style/Rock" />

        <activity
            android:name=".jazz"
            android:label="Джаз"
            android:parentActivityName=".Genres"
            android:screenOrientation="portrait"
            android:theme="@style/jazz"/>

        <activity android:name=".pop"
            android:label="Поп"
            android:parentActivityName=".Genres"
            android:screenOrientation="portrait"
            android:theme="@style/pop"/>

        <activity android:name=".metal"
            android:label="Метал"
            android:parentActivityName=".Genres"
            android:screenOrientation="portrait"
            android:theme="@style/metal"/>

        <activity android:name=".classic"
            android:label="Классика"
            android:parentActivityName=".Genres"
            android:screenOrientation="portrait"
            android:theme="@style/classic"/>

        <activity android:name=".bluze"
            android:label="Блюз"
            android:parentActivityName=".Genres"
            android:screenOrientation="portrait"
            android:theme="@style/bluze">

        </activity>
    </application>

</manifest>