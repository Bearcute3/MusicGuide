<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/scroll"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.test.musicguide_1.rock">

        <ImageView
            android:id="@+id/rockimageview"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/rock" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="30dp"
            android:text="@string/rock1"
            android:lineSpacingMultiplier="1.3"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="255dp"
            android:scaleType="fitXY"
            android:src="@drawable/deeppurple">
        </ImageView>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/start"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="play"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/start_states"/>

                    <Button
                        android:id="@+id/pause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="pause"
                        android:layout_weight="1"
                        android:background="@drawable/pause_states"/>

                    <Button
                        android:id="@+id/stop"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:onClick="stop"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/stop_states"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:text="@string/rock2"
            android:lineSpacingMultiplier="1.3"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/start1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="play1"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/start_states"/>

            <Button
                android:id="@+id/pause1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="pause1"
                android:layout_weight="1"
                android:background="@drawable/pause_states"/>

            <Button
                android:id="@+id/stop1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="stop1"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/stop_states"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>

