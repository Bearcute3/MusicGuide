<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/musicguide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:textSize="38sp"
        android:text="Music Guide"
        android:gravity="center"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/musicguide"
        android:layout_marginStart="40dp"
        android:textSize="30sp"
        android:text="@string/autor"
        android:gravity="center"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/autor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/autor"
        android:layout_marginStart="40dp"
        android:textSize="30sp"
        android:text="@string/autor1"
        android:gravity="center"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/autor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autor3"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="30sp"
        android:text="@string/autor3"
        android:textColor="@color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_above="@+id/data"
        android:textSize="24sp"
        android:layout_marginBottom="10dp"
        android:text="Разработчик – М. Приходько "
        android:textColor="#999999" />
    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:textSize="24sp"
        android:layout_marginBottom="10dp"
        android:text="2018"
        android:textColor="#999999" />

</RelativeLayout>